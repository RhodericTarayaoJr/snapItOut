<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Transparent fill so background color shows -->
    <solid android:color="@android:color/transparent" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Border -->
    <stroke
        android:width="3dp"
        android:color="#AA000000" /> <!-- semi-transparent black border -->

    <!-- Optional shadow effect using padding -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />

</shape>
