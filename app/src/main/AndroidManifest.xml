<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ðŸ“· Declare camera feature -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <!-- âœ… Camera permission -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera.any" android:required="false" />

    <!-- âœ… For Android 10 and below -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="29"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="29"/>

    <!-- âœ… For Android 13+ scoped storage -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/snapitouticon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/splashlogo"
        android:theme="@style/Theme.SnapItOut"
        tools:targetApi="31">

        <!-- ðŸ“‚ FileProvider -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- âœ… SPLASH SCREEN (FIRST SCREEN) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- OTHER ACTIVITIES -->
        <activity android:name=".CameraActivity" android:exported="true" />
        <activity android:name=".SignUpActivity" android:exported="true" />
        <activity android:name=".HomePageActivity" android:exported="true" />
        <activity android:name=".EditingActivity" android:exported="true" />
        <activity android:name=".FramesActivity" android:exported="true" />
        <activity android:name=".UserActivity" android:exported="true" />
        <activity android:name=".ExclusiveActivity" android:exported="true" />
        <activity android:name=".SharingActivity" android:exported="true" />
        <activity android:name=".AlbumActivity" android:exported="true" />
        <activity android:name=".FullScreenImageActivity" android:exported="true" />
        <activity android:name=".PhotoCollabActivity" android:exported="true" />
        <activity android:name=".GuestBookActivity" android:exported="true" />
        <activity android:name=".TemplatesActivity" android:exported="true" />
        <activity android:name=".EditTemplateActivity" android:exported="true" />
        <activity android:name=".TemplateViewerActivity" android:exported="true" />
        <activity android:name=".EventEditActivity" android:exported="true" />
        <activity android:name=".CameraActivity2" android:exported="true" />
        <activity android:name=".PdfPreviewActivity" android:exported="true" />
        <activity android:name=".PrintPreviewActivity" android:exported="true" />
        <activity android:name=".ProfileActivity" android:exported="true" />
        <activity android:name=".AboutUsActivity" android:exported="true" />
        <activity android:name=".HelpActivity" android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>
